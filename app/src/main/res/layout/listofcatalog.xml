<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

        <LinearLayout
            android:id="@+id/linearLayout_top_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#2c2c2c" >

            <TextView
                android:id="@+id/textview_head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/background_panel_top"
                android:gravity="center|left"
                android:paddingLeft="20px"
                android:text="Task "
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/divider" />

            <Button
                android:id="@+id/button_help"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/button_manual_selector" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <EditText
                android:id="@+id/itemname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="0sp"
                android:layout_marginTop="10sp"
                android:layout_weight="1"
                android:background="@drawable/edittext_gray"
                android:hint="@string/from_layout103"
                android:lines="1"
                android:singleLine="true"
                android:textColor="#767676" >

                <requestFocus />
            </EditText>

            

            
            
            <Button
                android:id="@+id/buttonaddnewtask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/taskname"
                android:layout_marginLeft="0sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="9sp"
                android:background="@drawable/button_add_task_selector"
                android:gravity="center" />
        </LinearLayout>


                             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider3"
                android:background="@drawable/divider3" />


  <LinearLayout
      android:id="@+id/linearLayout1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content" >

      <ListView
          android:id="@+id/catalogListView"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:layout_weight="1" >
      </ListView>

  </LinearLayout>

</LinearLayout>